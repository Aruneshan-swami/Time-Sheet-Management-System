@model IEnumerable<TimeMate.ViewModels.DisplayTimeSheet>
@{
    ViewData["Title"] = "TimesheetViewOnly";
    Layout = "~/Views/Layouts/_EmployeeLayout.cshtml";
}

    <div class="col-md-12">
    
        <div class="">
            <div class="card shadow mb-4 border-left-primary shadow h-100 py-2">
            
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">View Timesheet</h6>
                </div>

                <div class="card-body">
                    <div class="">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            Date
                                        </th>
                                        <th>Task</th>
                                        <th>Task Type</th>
                                        <th>Hours Spent</th>
                                        <th>status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Date</td>
                                            <td>@item.Task</td>
                                            <td>@item.TaskType</td>
                                            <td>@item.HoursSpent</td>
                                            <td>@item.status</td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

