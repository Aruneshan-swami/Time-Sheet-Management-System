@model Message
@if (User.IsInRole("Admin"))
{
    Layout = "~/Views/Shared/_SidebarAdminPartial.cshtml";
}
else if (User.IsInRole("Manager"))
{
    Layout = "~/Views/Shared/_SidebarManagerPartial.cshtml";
}
else if (User.IsInRole("Employee"))
{
    Layout = "~/Views/Shared/_SidebarEmployeePartial.cshtml";
}
<h2>Edit Message</h2>

<form asp-action="MessageEdit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="RecipientEmail" class="control-label"></label>
        <input asp-for="RecipientEmail" class="form-control" />
        <span asp-validation-for="RecipientEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subject" class="control-label"></label>
        <input asp-for="Subject" class="form-control" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Body" class="control-label"></label>
        <textarea asp-for="Body" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsRead" class="control-label"></label>
        <input asp-for="IsRead" class="form-control" />
        <span asp-validation-for="IsRead" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsArchived" class="control-label"></label>
        <input asp-for="IsArchived" class="form-control" />
        <span asp-validation-for="IsArchived" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
