@model TimeMate.Models.LeaveRequest

@{
    ViewData["Title"] = "Create";
}
@{

    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Layouts/_AdminLayout.cshtml";
    }
    else if (User.IsInRole("employee"))
    {
        Layout = "~/Views/Layouts/_EmployeeLayout.cshtml";
    }
    else /*if(User.IsInRole("Manager"))*/
    {
        Layout = "~/Views/Layouts/_ManagerLayout.cshtml";
    }
}
<div class="card shadow mb-4 border-left-primary shadow h-100 py-2 ">
    <div class="card-body">
        <h4 class="card-title">LeaveRequest</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="EmployeeId" class="control-label"></label>
                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="startDate" class="control-label"></label>
                        <input asp-for="startDate" class="form-control" />
                        <span asp-validation-for="startDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="endDate" class="control-label"></label>
                        <input asp-for="endDate" class="form-control" />
                        <span asp-validation-for="endDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Reason" class="control-label"></label>
                        <input asp-for="Reason" class="form-control" />
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="status" class="control-label"></label>
                        <select asp-for="status" class="form-control">
                            <option>Pending</option>
                        </select>
                        <span asp-validation-for="status" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CompensatoryDate" class="control-label"></label>
                        <input asp-for="CompensatoryDate" class="form-control" />
                        <span asp-validation-for="CompensatoryDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Request" class="btn btn-light" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
