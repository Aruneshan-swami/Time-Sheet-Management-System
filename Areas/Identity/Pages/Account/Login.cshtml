@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<style>
    body {
        background-image: url('https://static-cse.canva.com/blob/571182/rawpixel669610unsplash1.0ba579e2.jpg');
        background-size: cover;
    }

    .card {
        background-color: transparent;
        border: none;
    }

    .card-header {
        background-color: transparent;
        border: none;
    }

    .card-body {
        background-color: rgba(255, 255, 255, 0.5);
    }

</style>

<div class="row">
    <div class="col-md-4">
        <section class="vh-100 gradient-custom">
            <div class="card">
                <div class="card-header" style=" text-justify">
                    @ViewData["Title"]
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-outline-primary">Log in</button>
                        </div>
                        <div class="justify-content-between">
                            <p></p>
                            <p>
                                <a class="btn btn-outline-secondary" id="forgot-password" asp-area="Identity" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
@*                            <p>
                                <a class="btn btn-outline-secondary" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
*@                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
